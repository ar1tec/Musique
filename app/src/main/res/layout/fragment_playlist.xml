<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="playlist"
    android:id="@+id/fragment_playlist"
    android:background="@color/white"
    tools:mContext="org.oucho.musicplayer.fragments.PlaylistFragment"
    tools:ignore="Overdraw">

    <org.oucho.musicplayer.widgets.DragRecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="@dimen/barre_lecture"
        app:bubbleColor="@color/noirTransparent"
        app:bubbleTextColor="@color/amber_700"
        app:handleColor="@color/amber_700"
        app:hideScrollbar="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow"/>

</RelativeLayout>