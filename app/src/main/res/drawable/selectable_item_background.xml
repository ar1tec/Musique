<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@drawable/abc_list_selector_disabled_holo_dark" android:state_enabled="false" android:state_focused="true" android:state_pressed="true" tools:ignore="PrivateResource" />
    <item android:drawable="@drawable/abc_list_selector_disabled_holo_dark" android:state_enabled="false" android:state_focused="true" tools:ignore="PrivateResource" />
    <item android:drawable="@drawable/abc_list_selector_background_transition_holo_dark" android:state_focused="true" android:state_pressed="true" tools:ignore="PrivateResource" />
    <item android:drawable="@drawable/abc_list_selector_background_transition_holo_dark" android:state_focused="false" android:state_pressed="true" tools:ignore="PrivateResource" />
    <item android:drawable="@drawable/abc_list_selector_background_transition_holo_dark" android:state_selected="true" tools:ignore="PrivateResource" />
    <item android:drawable="@drawable/abc_list_focused_holo" android:state_focused="true" tools:ignore="PrivateResource" />
    <item android:drawable="@android:color/transparent" />

</selector>